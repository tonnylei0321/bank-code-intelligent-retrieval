# 智能问答系统环境配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# ================================
# Redis 配置
# ================================

# Redis连接URL
REDIS_URL=redis://localhost:6379/0

# Redis连接参数
REDIS_CONNECTION_TIMEOUT=10
REDIS_SOCKET_TIMEOUT=5
REDIS_MAX_CONNECTIONS=20

# Redis数据管理
REDIS_KEY_PREFIX=bank_code:
REDIS_DEFAULT_TTL=86400
REDIS_BATCH_SIZE=1000

# ================================
# 小模型配置
# ================================

# OpenAI配置（可选）
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic配置（可选）
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# 本地模型配置
LOCAL_MODEL_NAME=microsoft/DialoGPT-medium
LOCAL_MODEL_CACHE_DIR=./models/cache

# 模型参数
MODEL_DEFAULT_TEMPERATURE=0.1
MODEL_DEFAULT_MAX_TOKENS=512
MODEL_REQUEST_TIMEOUT=30
MODEL_RETRY_ATTEMPTS=3

# 计算设备 (auto, cpu, cuda)
MODEL_DEVICE=auto

# ================================
# 智能问答服务配置
# ================================

# 检索配置
QA_DEFAULT_RETRIEVAL_STRATEGY=intelligent
QA_MAX_CONTEXT_RESULTS=5
QA_REDIS_SEARCH_LIMIT=10
QA_RAG_SEARCH_LIMIT=5

# 答案质量配置
QA_ANSWER_CONFIDENCE_THRESHOLD=0.7
QA_QUALITY_THRESHOLD=0.8

# 历史记录配置
QA_ENABLE_HISTORY=true
QA_HISTORY_LIMIT=100

# 缓存配置
QA_CACHE_ANSWERS=true
QA_CACHE_TTL=3600

# 性能配置
QA_ENABLE_LEARNING=true
QA_FALLBACK_TO_RAG=true

# ================================
# 数据库配置（如果需要）
# ================================

# DATABASE_URL=sqlite:///./data/app.db

# ================================
# 日志配置
# ================================

# LOG_LEVEL=INFO
# LOG_FILE=./logs/intelligent_qa.log